{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/merchy-ui/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/web:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "compiler": "babel",
        "outputPath": "dist/apps/merchy-ui",
        "index": "apps/merchy-ui/src/index.html",
        "baseHref": "/",
        "main": "apps/merchy-ui/src/main.tsx",
        "polyfills": "apps/merchy-ui/src/polyfills.ts",
        "tsConfig": "apps/merchy-ui/tsconfig.app.json",
        "assets": [
          "apps/merchy-ui/src/favicon.ico",
          "apps/merchy-ui/src/assets",
          {
            "input": "./libs/shared-assets/",
            "glob": "**/*",
            "output": "./assets"
          }
        ],
        "styles": [],
        "scripts": [],
        "webpackConfig": "apps/merchy-ui/custom-webpack.config.js"
      },
      "configurations": {
        "development": {
          "extractLicenses": false,
          "optimization": false,
          "sourceMap": true,
          "vendorChunk": true
        },
        "production": {
          "fileReplacements": [
            {
              "replace": "apps/merchy-ui/src/environments/environment.ts",
              "with": "apps/merchy-ui/src/environments/environment.prod.ts"
            }
          ],
          "optimization": true,
          "outputHashing": "all",
          "sourceMap": false,
          "namedChunks": false,
          "extractLicenses": true,
          "vendorChunk": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/web:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "merchy-ui:build",
        "hmr": true,
        "port": 3000,
        "webpackConfig": "apps/merchy-ui/custom-webpack.config.js"
      },
      "configurations": {
        "development": {
          "buildTarget": "merchy-ui:build:development"
        },
        "production": {
          "buildTarget": "merchy-ui:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/merchy-ui/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/merchy-ui"],
      "options": {
        "jestConfig": "apps/merchy-ui/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
